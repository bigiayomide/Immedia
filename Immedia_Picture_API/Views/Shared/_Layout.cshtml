                    </div>
                
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="https://bootstrapious.com/tutorial/sidebar/index2.html#">Page</a></li>
                            <li><a href="https://bootstrapious.com/tutorial/sidebar/index2.html#">Page</a></li>
                            <li><a href="https://bootstrapious.com/tutorial/sidebar/index2.html#">Page</a></li>
                            <li><a href="https://bootstrapious.com/tutorial/sidebar/index2.html#">Page</a></li>
                        </ul>
                        <form class="navbar-form" id="search" role="search">
                            <div class="form-group">
                                <input type="text" id="searchbox" class="ui-widget form-control" placeholder="Search">
                            </div>
                            <!-- <button type="submit" class="btn btn-default">Submit</button> -->
                        </form>
                    </div>
                </div>
            </nav>
            <div class="body-content">
                @RenderBody()
            </div>
        </div>
    </div>
    <div id="success" class="alert-favourite alert alert-success alert-dismissible fade in invisible">
        <button  class="close" data-dismiss="alert" aria-label="close">&times;</button>
        <strong>Success!</strong> Added to Favourites
    </div>
    <div id="failure" class="alert-favourite alert alert-danger alert-dismissible fade in ">
        <button  class="close" data-dismiss="alert" aria-label="close">&times;</button>
        <strong>Failure!</strong> An Error Occured
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
